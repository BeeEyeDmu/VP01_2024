<Window x:Class="_030_Language.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_030_Language"
        mc:Ignorable="d"
        Title="MainWindow" Height="320" Width="400">
  <StackPanel Margin="30">
    <TextBlock HorizontalAlignment="Center"
        Text="■ 좋아하는 프로그래밍 언어를 선택하세요"/>
    <Separator Background="LightBlue" Margin="0 5 0 0"/>
    <CheckBox x:Name="cbC" Margin="30 10 0 0 ">C</CheckBox>
    <CheckBox x:Name="cbCPP" Content="C++" Margin="30 10 0 0 "/>
    <CheckBox x:Name="cbCS" Content="C#" Margin="30 10 0 0 "/>
    <CheckBox x:Name="cbPython" Content="Python" Margin="30 10 0 0 "/>
    <CheckBox x:Name="cbJava" Content="Java" Margin="30 10 0 0 "/>
    <Separator Background="LightBlue" Margin="0 10 0 0"/>
    <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center">
      <Button x:Name="btnSubmit" Margin="10 10 5 0" Padding="5" 
              Content="투표하기" Width="100"
              Click="btnSubmit_Click"/>
      <Button x:Name="btnExit" Margin="10 10 5 0" Padding="5"
              Content="끝내기" Width="100"
              Click="btnExit_Click"/>
    </StackPanel>
  </StackPanel>
</Window>
